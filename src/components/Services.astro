---
import servicios from '../data/servicios.json';
---
<section id="services" class="flex flex-col justify-center items-center w-full mx-auto px-10 py-16 md:px-20">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-blue-900 mb-4">
        {servicios.titulo}
    </h2>
    <p class="text-lg text-center text-gray-600 mb-12 w-full md:max-w-[500px]">
        {servicios.descripcion}
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {servicios.cards.map(card => (
            <div class="bg-slate-50 rounded-2xl shadow-md p-8 flex flex-col justify-between text-center transition hover:shadow-xl">
                <div class="flex flex-col gap-1">
                    <span class="text-5xl mb-4">{card.icono}</span>
                    <h3 class="text-xl text-nowrap font-bold text-blue-900 mb-2">{card.titulo}</h3>
                    <p class="text-gray-600 mb-4">{card.descripcion}</p>
                </div>
                <a href={`/servicios/${card.slug}`} class="text-blue-900 font-semibold hover:underline">
                    {card.linkText}
                </a>
            </div>
        ))}
    </div>
</section>