---
export interface Props {
    title: string;
    description: string;
    image?: string;
    url?: string;
}

const {
    title,
    description,
    image = "/logo.png",
    url = "https://aemiingenieria.cl",
} = Astro.props;
---

<!-- SEO Meta Tags -->
<title>{title}</title>
<link rel="icon" type="image/png" href="/favicon.png" />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="description" content={description} />
<meta name="robots" content="index, follow" />
<meta name="keywords" content="cámaras de frío, aire acondicionado, refrigeración, climatización, electricidad, Curicó, AEMI Ingeniería" />
<link rel="canonical" href={url + Astro.url.pathname} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={url + image} />
<meta property="og:url" content={url + Astro.url.pathname} />
<meta property="og:site_name" content="AEMI INGENIERÍA" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={url + image} />

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "AEMI Ingeniería",
  "image": "https://www.aemiingenieria.cl/logo.png",
  "url": "https://www.aemiingenieria.cl",
  "telephone": "+56992271055",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Curicó",
    "addressRegion": "Maule",
    "addressCountry": "CL",
    "streetAddress": "Doctor Osorio 711"
  },
  "description": "Expertos en instalación y mantenimiento de sistemas de aire acondicionado, refrigeración y climatización en Curicó y Región del Maule.",
  "areaServed": "Curicó, Región del Maule",
  "priceRange": "$$"
}
</script>
